                                <configuration>
                                    <extraJvmArgs>-Xmx1024m -Xss1024k</extraJvmArgs>
                                </configuration>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>openshift-prepare</id>
            <properties>
                <webDescriptor>jboss7</webDescriptor>
            </properties>

            <dependencies>
                <dependency>
                    <groupId>org.jboss.errai</groupId>
                    <artifactId>errai-ioc</artifactId>
